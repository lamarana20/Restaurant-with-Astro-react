---
import Layout from '../layouts/Layout.astro';
---
<Layout>
<main class="max-w-xl mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-6 text-center">Passer une commande</h1>

  <form class="space-y-4">
    <input type="text" class="w-full border p-2 rounded" placeholder="Nom complet" required />
    <input type="tel" class="w-full border p-2 rounded" placeholder="Téléphone" required />
    <input type="text" class="w-full border p-2 rounded" placeholder="Plat souhaité" required />
    <textarea class="w-full border p-2 rounded" rows="3" placeholder="Adresse de livraison"></textarea>
    <button type="submit" class="bg-amber-600 text-white px-6 py-2 rounded hover:bg-amber-700">Commander</button>
  </form>
</main>
</Layout>